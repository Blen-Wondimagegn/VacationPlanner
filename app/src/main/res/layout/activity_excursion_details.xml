<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText with increased height and padding for better touch target -->
    <EditText
        android:id="@+id/excursionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Excursion Title"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />


    <TextView
        android:id="@+id/excursionDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="false"
        android:hint="Excursion Date"
        android:minHeight="48dp"
        android:padding="12dp" />

    <!-- Spinner with increased height, padding, and margin for better touch target -->
    <Spinner
        android:id="@+id/vacationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:minHeight="48dp"
        android:padding="12dp" />

</LinearLayout>
